{
    "name": "gralhao/gralhao-test",
    "description": "Pack of tools to make simple Gralhao application tests",
    "type": "library",
    "minimum-stability": "stable",
    "homepage": "https://github.com/gralhao/gralhao",
    "keywords": [
        "phalcon",
        "gralhao",
        "test",
        "phpunit"
    ],
    "autoload": {
        "psr-4": {
            "Gralhao\\Test\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GralhaoTest\\Test\\": "test/"
        }
    },
    "require": {
        "phpunit/phpunit": "^9.2"
    },
    "require-dev": {
        "phalcon/ide-stubs": "dev-master",
        "squizlabs/php_codesniffer": "^3.0@dev",
        "gralhao/gralhao": "^1.0"
    },
    "license": "BSD-3-Clause",
    "scripts": {
        "cs-check": "./vendor/bin/phpcs",
        "cs-fix": "./vendor/bin/phpcbf",
        "test": "./vendor/bin/phpunit --testdox --coverage-text --coverage-html coverage/html"
    }
}
